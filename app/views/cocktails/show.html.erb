<h2> <%= @cocktail.name %> </h2>

<%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail)  %>

<ul>

    <% @cocktail.doses.each do |dose| %>
  <li>
   <%= dose.description %> of <%= dose.ingredient.name %>
   <%= link_to "Delete this ingredient",   dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>

</ul>
