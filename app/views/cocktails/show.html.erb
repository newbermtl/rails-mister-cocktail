<div class="container-form">
  <% @cocktail.photo.attached? ? card_style = "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path @cocktail.photo.key, :width=>400, :effect=>"sepia:80"}')" : card_style = "background-color: #401618" %>
  <div class="card-category" style= "<%=card_style%>" >
    <%= @cocktail.name %>
  </div>
  <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail)  %>
</div>

<ul>
  <div class="cards-ingredient">
    <% @cocktail.doses.each do |dose| %>
    <li>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= dose.description %> of <%= dose.ingredient.name %></h2>
          <%= link_to " Remove this ingredient",   dose_path(dose),
          method: :delete,
          data: { confirm: "Are you quite sure?" } %>
        </div>
      </div>
    </li>
    <% end %>
  </div>
</ul>



