<div class="container">
  <ul>
    <div class="cards mt-4">
      <% @cocktails.each do |cocktail|  %>
      <li>
        <div class="card-category" style= <%= cocktail.photo.attached? ? "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill }')" : "background-color: #401618; "%> >
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </li>
      <% end %>
    </div>
  </ul>
</div>
